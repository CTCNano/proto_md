; $Id$
; Template for MD with GROMOS96 G43a1.
; TODO: Parameters are NOT tested yet. -- OB 2009-08-07
;
; ==================================================================
;      DO NOT USE THIS INPUT FILE WITHOUT CHECKING ALL SETTINGS.
; *YOU* ARE SOLELY RESPONSIBLE FOR CORRECT INPUT TO YOUR SIMULATION.
; ==================================================================

include                  = -I. -I.. -I../top
define                   =

integrator               = md
tinit                    = 0.0
dt                       = 0.002
nsteps                   = 50000000

nstxout                  = 50000
nstvout                  = 50000
nstfout                  = 0
; Output frequency for energies to log file and energy file
nstlog                   = 500
nstenergy                = 0
nstcalcenergy            = 0

; Output frequency and precision for xtc file
nstxtcout                = 500
xtc-precision            = 1000


comm-mode                = Linear
nstcomm                  = 1000
comm-grps                = SYSTEM

ns_type                  = grid
nstlist                  = 10
rlist                    = 1.0

rcoulomb                 = 1.0
; GROMOS96 was parametrised with a LJ cut-off of 1.4
; For Berger lipids: change rvdw = 1.0
; Gromos96 has rvdw 1.4 nm but for Berger lipids use 1.0 and PME
; [Patra BJ 84 (2003)]
rvdw                     = 1.4
vdwtype                  = cut-off
coulombtype              = PME
optimize_fft             = yes

Tcoupl                   = v-rescale
tau_t                    = 0.1 0.1
tc-grps                  = __main__ __environment__
ref_t                    = 300 300
Pcoupl                   = berendsen
Pcoupltype               = isotropic
tau_p                    = 0.5
compressibility          = 4.5e-5
ref_p                    = 1.0
DispCorr                 = EnerPres

gen_vel                  = yes
gen_temp                 = 300
gen_seed                 = -1

ld_seed                  = -1

constraints              = hbonds
constraint-algorithm     = Lincs
lincs-order              = 4
lincs-iter               = 1
